{
  "name": "3d-snake-game",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "npm run build:copy-public && npm run build:copy-root && npm run build:copy-audio && npm run build:tailwind && npm run build:esbuild",
    "build:copy-public": "npx copyfiles -u 1 public/**/* dist",
    "build:copy-root": "npx copyfiles ads.txt app-ads.txt dist",
    "build:copy-audio": "npx copyfiles -u 1 audio/**/* dist/audio",
    "build:tailwind": "npx tailwindcss -i ./styles.css -o ./dist/styles.css --minify",
    "build:esbuild": "npx esbuild index.tsx --bundle --outfile=dist/bundle.js --minify --sourcemap"
  },
  "dependencies": {
    "firebase": "^10.12.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "three": "^0.166.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/three": "^0.166.0",
    "copyfiles": "^2.4.1",
    "esbuild": "^0.23.0",
    "tailwindcss": "3.4.4",
    "typescript": "^5.5.2"
  }
}